<tbody>
    <% let serialNumber=1; %>
    <% products.forEach(product => { %>
        <% if(product.isadmin!==1){ %>



  <tr>



    <th scope="row"><%=serialNumber %></th>
    <td>  <%= product.name %>  </td>
    <td><%= product.email %></td>
  
    <td style="color:<%= product.Status ? 'green' : 'red' %>;">
        <% if (product.Status) { %>
          product Active
        <% } else { %>
          product blocked
        <% } %>
      </td>
      
      
      
  
      
      <td>
        <form action="/productdelete/<%= product._id %>" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </td>
      
      <!-- For Blocking -->
      <td>
        <form action="/productblock/<%= product._id %>" method="post">
          <button type="submit" class="btn btn-warning">Block</button>
        </form>
      </td>
      
      <!-- For Unblocking -->
      <td>
        <form action="/productunblock/<%= product._id %>" method="post">
          <button type="submit" class="btn btn-success">Unblock</button>
        </form>
      </td>
      


  </tr>
  <% serialNumber++; %>
  <% }; %>
  <% }); %>
</tbody>