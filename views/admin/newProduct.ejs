                    if(cropperImageInitCanvas.cropper){
                      var cropcanvas = cropperImageInitCanvas.cropper.getCroppedCanvas({width: 150, height: 150});
                      // document.getElementById('cropImages').appendChild(cropcanvas);
                      var ctx=cropcanvas.getContext('2d');
                        var imgData=ctx.getImageData(0, 0, cropcanvas.width, cropcanvas.height);
                        // var image = document.getElementById(c);
                        c.width = cropcanvas.width;
                        c.height = cropcanvas.height;
                        var ctx = c.getContext('2d');
                        ctx.putImageData(imgData,0,0);
                        cropperImageInitCanvas.cropper.destroy();
                        cropperImageInitCanvas.width = 0;
                        cropperImageInitCanvas.height = 0;
                        cropImageButton.style.display = 'none';
                        var allCloseButtons = document.querySelectorAll('.singleImageCanvasCloseBtn');
                        for (let element of allCloseButtons) {
                          element.style.display = 'block';
                        }
                        urlConversion();
                        // cropperImageInitCanvas.style.display = 'none';
                    } else {
                      alert('Please select any Image you want to crop');
                    }
                  }
                  cropImageButton.addEventListener("click", function(){
                    image_crop();
                  });
                // Image Close/Remove
                  function removeSingleCanvas(selector) {
                    selector.parentNode.remove();
                    urlConversion();
                  }

                  function urlConversion() {
                    var allImageCanvas = document.querySelectorAll('.singleImageCanvas');
                    var convertedUrl = '';
                    for (let element of allImageCanvas) {
                      convertedUrl += element.toDataURL('image/jpeg');
                      convertedUrl += 'img_url';
                    }
                    document.getElementById('profile_img_data').value = convertedUrl;
                  }
                
                        </script>
                  
                        


            <script>
      
         function previewAllImages(input) {
            const maxAllowedImages = 4;
            const selectedFilesCount = input.files.length;
        
            console.log('Selected Files Count:', selectedFilesCount);
        
            const selectedFilesLabel = document.getElementById('selectedFilesLabel');
            selectedFilesLabel.textContent = `Selected Files: ${selectedFilesCount}`;
        
            if (selectedFilesCount > maxAllowedImages) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Oops...',
                    text: `You can only select up to ${maxAllowedImages} images.`,
                });
                const selectedFilesLabel = document.getElementById('selectedFilesLabel');
                selectedFilesLabel.textContent = `Selected Files: 0`;
                input.value = '';
            } else {
                const imageContainerIds = ['preview1', 'preview2', 'preview3', 'preview4'];
        
                for (let i = 0; i < selectedFilesCount; i++) {
                    const file = input.files[i];
                    const imageContainerId = imageContainerIds[i];
        
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const previewImage = document.getElementById(imageContainerId);
                        console.log('Preview Image Element:', previewImage);
                        previewImage.src = e.target.result;
                        previewImage.style.display = 'block';
                    };
        
                    reader.readAsDataURL(file);
                }
            }
