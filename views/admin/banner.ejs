              <script>
                function deleteImage() {
                  // Display a confirmation dialog
                  Swal.fire({
                    title: 'Are you sure?',
                    text: 'This action will delete the image. Are you sure you want to proceed?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, cancel!',
                  }).then((result) => {
                    if (result.isConfirmed) {
                      // If the user confirms, send a request to delete the image
                      axios.post('/bannerAdmin?delete=yes')
                        .then(response => {
                          // Check if there is a message in the response
                          const message = response.data.message || 'Image deleted successfully!';
                
                          Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: message,
                          });
                        })
                        .catch(error => {
                          // Handle errors
                          console.error('Error deleting image', error);
                
                          // Check if there is an error message in the response
                          const errorMessage = error.response ? error.response.data.message : 'Failed to delete image. Please try again later.';
                
                          Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: errorMessage,
                          });
                        });
                    }
                  });
                }
                
              



                let cropper;
              
                function displayImage() {
                  const input = document.getElementById('imageInput');
                  if (input.files && input.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                      const image = document.getElementById('image');
                      image.src = e.target.result;
              
                      // Destroy the previous cropper instance (if exists)
                      if (cropper) {
                        cropper.destroy();
                      }
              
                      // Create a new Cropper instance
                      cropper = new Cropper(image, {
                        aspectRatio: 1170 / 500,
                        viewMode: 0,
                      });
                    };
                    reader.readAsDataURL(input.files[0]);
                  }
                }
              
                function cropImage() {
                  if (cropper) {
                    const croppedImage = cropper.getCroppedCanvas().toDataURL('image/png');
                    document.getElementById('output').src = croppedImage;
                  } else {
                    console.error("Cropper not initialized.");
                  }
                }






              </script>
              
              <script>
                function isValidURL(url) {
                  // Regular expression for a valid URL without the protocol
                  const urlPattern = /^\/[a-zA-Z0-9_]+\/[0-9]+\?search=[a-zA-Z0-9]+$/;
                  return urlPattern.test(url);
              }
              
              function submitForm() {
                  // Get values from input fields
                  const title = document.getElementById('title').value;
                  const link = document.getElementById('link').value;
              
                  // Check if any fields are blank or link is not a valid URL
                  if (!title || !link || !getCroppedImageData() || !isValidURL(link)) {
                      // Display a SweetAlert error message with specific details
                      let errorMessage = 'Please fix the following issues:\n\n';
              
                      if (!title) {
                          errorMessage += '- Title cannot be blank.\n';
                      }
              
                      if (!link) {
                          errorMessage += '- Link cannot be blank.\n';
                      } else if (!isValidURL(link)) {
                          errorMessage += '- Link must be a valid URL with Search Specifed.\n';
                      }
              
                      if (!getCroppedImageData()) {
                          errorMessage += '- Please crop an image.\n';
                      }
              
                      Swal.fire({
                          icon: 'error',
                          title: 'Validation Error',
                          text: errorMessage,
                      });
                      return; // Exit function if validation fails
                  }
              
                  // Get the cropped image data
                  const croppedImageData = getCroppedImageData();
              
                  // Create a FormData object to send data as a multipart/form-data
                  const formData = new FormData();
                  formData.append('title', title);
                  formData.append('link', link);
                  formData.append('image', croppedImageData);
              
                  // Send the data to the backend using Axios
                  axios.post('/bannerAdmin', formData)
                      .then(response => {
                          // Handle the response from the backend
                          console.log(response.data);
                          // Display a SweetAlert success message
                          Swal.fire({
                              icon: 'success',
                              title: 'Success',
                              text: 'Data submitted successfully!',
                          });
                      })
                      .catch(error => {
                          // Handle errors
                          console.error('Error sending data to the backend', error);
                          // Display a SweetAlert error message
                          Swal.fire({
                              icon: 'error',
                              title: 'Error',
                              text: 'Failed to submit data. Please try again later.',
                          });
                      });
              }
              
              
                function getCroppedImageData() {
                    // Get the Cropper instance and check if it exists
                    if (!cropper) {
                        console.error("Cropper not initialized.");
                        return '';
                    }
                
                    // Get the cropped image data as a data URL
                    const croppedImageData = cropper.getCroppedCanvas().toDataURL('image/jpeg', 0.8);
                
                    return croppedImageData;
                }
                
              </script>


             
