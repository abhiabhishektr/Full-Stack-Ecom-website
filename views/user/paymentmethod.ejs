                        </div><!-- End .custom-checkbox -->


            		
		                	<div class="row">
                                <form action="/addAddress/0" method="post">
                                    
                                    <div class="col-lg-12">
                                        <h2 class="checkout-title">Shipping Details</h2><!-- End .checkout-title -->
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>First Name *</label>
                                                <input type="text" class="form-control" name="firstName" required pattern="^\S.*\S$">
                                            </div><!-- End .col-sm-6 -->
                                
                                            <div class="col-sm-6">
                                                <label>Last Name *</label>
                                                <input type="text" class="form-control" name="lastName" required pattern="^\S.*\S$">
                                            </div><!-- End .col-sm-6 -->
                                        </div><!-- End .row -->
                                
                                        <label>Company Name (Optional)</label>
                                        <input type="text" class="form-control" name="companyName">
                                
                                        <label>Country *</label>
                                        <input type="text" class="form-control" name="country" required pattern="^\S.*\S$">
                                
                                        <label>Street address *</label>
                                        <input type="text" class="form-control" name="streetAddress1" placeholder="House number and Street name" required pattern="^\S.*\S$">
                                        <input type="text" class="form-control" name="streetAddress2" placeholder="Appartments, suite, unit etc ..." required pattern="^\S.*\S$">
                                
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Town / City *</label>
                                                <input type="text" class="form-control" name="townCity" required pattern="^\S.*\S$">
                                            </div><!-- End .col-sm-6 -->
                                
                                            <div class="col-sm-6">
                                                <label>State / County *</label>
                                                <input type="text" class="form-control" name="stateCounty" required pattern="^\S.*\S$">
                                            </div><!-- End .col-sm-6 -->
                                        </div><!-- End .row -->
                                
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Postcode / ZIP *</label>
                                                <input type="text" class="form-control" name="postcodeZIP"  pattern="[0-9]{6}" required>
                                            </div><!-- End .col-sm-6 -->
                                
                                            <div class="col-sm-6">
                                                <label>Phone *</label>
                                                <input type="tel" class="form-control" name="phone" pattern="[789]\d{9}" required>
                                            </div><!-- End .col-sm-6 -->
                                        </div><!-- End .row -->
                                
                                    </div><!-- End .col-lg-9 -->
                                
                                    <button type="submit" class="btn btn-outline-primary-2 btn-order btn-block" >
                                        <span class="btn-text">Add Address</span>
                                        <span class="btn-hover-text">Proceed to Add Address</span>
                                    </button>
                                </form>

                                <aside class="col-lg-3">
                                    <form id="checkoutForm" action="/checkOut?selectedAddressIndex=<%= selectedAddressIndex %>" method="POST" >
                                        <input type="hidden" name="addressIndex" id="addressIndexInput" value="<%= selectedAddressIndex %>">
                                        
                                        <div class="summary">
                                            <h3 class="summary-title">Your Order</h3><!-- End .summary-title -->
                                
                                            <table class="table table-summary">
                                                <thead>
                                                    <tr>
                                                        <th>Product</th>
                                                        <th>Total</th>
                                                    </tr>
                                                </thead>
                                            
                                                <tbody>
                                                    <% let subtotal = 0; %>
                                                    <% cart.products.forEach(product => { %>
                                                        <tr>
                                                            <td><a href="#"><%= product.productId.name %></a></td>
                                                            <td>$<%= product.totalPrice %></td>
                                                        </tr>
                                                        <% subtotal += product.totalPrice; %>
                                                    <% }); %>
                                                
                                                    <tr class="summary-subtotal">
                                                        <td>Subtotal:</td>
                                                        <td>$<%= subtotal.toFixed(2) %></td>
                                                    </tr><!-- End .summary-subtotal -->
                                                
                                                    <tr>
                                                        <td>Shipping:</td>
                                                        <td>Free shipping</td>
                                                    </tr>
                                                
                                                    <tr class="summary-total">
                                                        <td>Total:</td>
                                                        <td>$<%= (subtotal + 0).toFixed(2) %></td>
                                                    </tr><!-- End .summary-total -->
                                                </tbody>
                                                
                                            </table><!-- End .table table-summary -->
                                            
                                
                                            <!-- Shipping Options -->
