            <script>
                function addToCart(productId, productPrice) {
                    console.log(1111)
                    $.ajax({
                        url: '/updatecart/' + productId,
                        type: 'PUT',
                        success: function(response) {
                            if (response.status === 'success') {
                                Swal.fire('Success!', response.message, 'success');
                                updateCartUI(response,productId);
                            } else if (response.status === 'error') {
                                Swal.fire('Error!', response.message, 'error');
                            }
                        },
                        error: function(error) {
                            Swal.fire('Error!', 'An error occurred while updating the cart.', 'error');
                        }
                    });
                }
            
                function updateCartUI(response, productId, productPrice) {
                    var currentCount = $('.cart-count').text();
                    var currentAmt = $('.cart-txt').text().replace(/[^\d]/g, '');
                    var newCount = parseInt(currentCount) + 1;
                    productPrice = parseFloat(productPrice); // Ensure product price is numeric
                    var newAmt = 'â‚¹ ' + (parseFloat(currentAmt) + productPrice);
                
                    // Update UI with new count and amount
                    $('.cart-count').text(newCount).css({
                        'transition': 'all 0.5s ease',
                        'transform': 'scale(1.2)',
                    });
                
                    $('.cart-txt').text(newAmt);
                
                    // Reset transition and scale after a delay
                    setTimeout(function () {
                        $('.cart-count').css({
                            'transition': 'none',
                            'transform': 'scale(1)',
                        });
                
                        // Replace the button with "Go to Cart" link
                        $(`#cart${productId}`).html('<a href="/cart" class="btn-product btn-cart">Go to Cart</a>');
                    }, 500);
                }
                
            </script>
            








