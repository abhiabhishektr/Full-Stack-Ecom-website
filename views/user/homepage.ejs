    <script>
        function addToWishlist(productId) {
            // You can use fetch or any other method to send a PUT request with the product ID in the request body
            fetch('/wishlistManagement', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId: productId }),
            })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error('Failed to add to wishlist');
                    }
                })
                .then(data => {
                    // Handle the response data as needed
                    const productDiv = document.getElementById(productId);
                    const wishlistLink = document.querySelector('.wishlist-link');
                    const wishlistCountElement = wishlistLink.querySelector('.wishlist-count');
    
                    if (data.message == "Product removed from wishlist") {
                        // Update the DOM to show "Add to Wishlist"
                        productDiv.innerHTML = `
                            <a onclick="addToWishlist('${productId}')" class="btn-product-icon btn-wishlist btn-expandable" style="cursor: pointer;">
                                <span>Add to Wishlist</span>
                            </a>
                        `;
                        // Reduce the wishlistCount by 1
                        wishlistCountElement.textContent = parseInt(wishlistCountElement.textContent, 10) - 1;
                    } else if (data.message == "Product added to wishlist") {
                        // Update the DOM to show "Remove from Wishlist"
                        productDiv.innerHTML = `
                            <a onclick="addToWishlist('${productId}')" style="cursor: pointer;">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="25" height="25" style="fill: #fe0ebe;">
                                    <path d="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9L464.4 300.4c30.4-28.3 47.6-68 47.6-109.5v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5z"/>
                                </svg>
                                <span></span>
                            </a>
                        `;
                        // Increase the wishlistCount by 1
                        wishlistCountElement.textContent = parseInt(wishlistCountElement.textContent, 10) + 1;
                      } else if (data.message == "No Login") {
                        // Display SweetAlert for login
                        Swal.fire({
                          title: "Login Required",
                          text: "Please log in to add products to your wishlist.",
                          icon: "warning",
                          showConfirmButton: false, // Hide the default "OK" button
                          timer: 1000, // Set the timer to 2000 milliseconds (2 seconds)
                      });
                      
                                                          }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    </script>


  
