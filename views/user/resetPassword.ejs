        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var form = document.querySelector("#register-2 form");
                var urlParams = new URLSearchParams(window.location.search);

                form.addEventListener("submit", function (event) {
                    event.preventDefault();

                    var newPasswordInput = document.getElementById("new-password");
                    var confirmPasswordInput = document.getElementById("confirm-password");
                    var errorMessageContainer = document.getElementById("error-message");
                    var usernameContainer = document.getElementById("username-container");

                    // Check if password meets the criteria
                    if (newPasswordInput.value.length < 6) {
                        errorMessageContainer.textContent = "Password must be at least 6 characters long.";
                        errorMessageContainer.style.display = "block";
                        return;
                    }

                    // Check if password and confirm password match
                    if (newPasswordInput.value !== confirmPasswordInput.value) {
                        errorMessageContainer.textContent = "Passwords do not match.";
                        errorMessageContainer.style.display = "block";
                        return;
                    }

                    // Get the username from the URL parameter
                    var useremail = urlParams.get("name");
                    var usertoken = urlParams.get("token");
                    console.log(usertoken);
                    // Display the username in the container
                    //usernameContainer.innerHTML = `<p>Hello, ${username}!</p>`;

                    // Reset error message and hide it
                    errorMessageContainer.textContent = "";
                    errorMessageContainer.style.display = "none";

                    // Continue with form submission or other logic

                    var apiUrl = "/resetPassword";
                    fetch(apiUrl, {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({
                            newPassword: newPasswordInput.value,
                            confirmPassword: confirmPasswordInput.value,
                            useremail: useremail,
                            usertoken: usertoken,
                        }),
                    })
                        .then((response) => response.json())
                        .then((data) => {
                            if (data.success) {
                                // Email sent successfully
                                console.log("Password Updated");
                                Swal.fire("Password Changed Succesfully!");
                            } else {
                                // Handle errors and update the HTML
                                console.error("Error:", data.message);
                                Swal.fire("Try again Something Wrong!");
                            }
                        });
                    function errorMessageContainer(message) {
                        var errorMessageContainer = document.getElementById("error-message");
                        errorMessageContainer.textContent = message;
                        errorMessageContainer.style.display = "block";
                    }
                    // ...
                });
            });
        </script>

